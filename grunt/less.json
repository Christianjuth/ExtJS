{
  "default" :{
    "options" : {
      "compress" : true
    },
    "files" : [
      {
        "expand" : true,
        "cwd" : "app/less",
        "src" : ["**/*.less"],
        "dest" : "builds/latest.safariextension/assets/css/<%= srcDir %>/",
        "ext" : ".css"
      },
      {
        "expand" : true,
        "cwd" : "app/views",
        "src" : ["**/*.less"],
        "dest" : "builds/latest.safariextension/views/<%= srcDir %>/",
        "ext" : ".css"
      }
    ]
  }
}
