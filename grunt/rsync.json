{
  "options" : {
    "args" : ["--verbose"],
    "recursive" : true
  },

  "package" : {
    "options" : {
      "exclude" : [
        "*.png",
        "**/*.coffee",
        "**/*.less",
        "manifest.json",
        "Info.plist",
        "Settings.plist"
      ],
      "src" : "app/",
      "dest" : "builds/latest.safariextension",
      "delete" : true
    }
  },

  "icons" : {
    "options" : {
      "src" : "app/menu-icons/",
      "dest" : "builds/latest.safariextension/menu-icons",
      "delete" : true
    }
  }
}
