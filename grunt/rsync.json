{
  "options" : {
    "args" : ["--verbose"],
    "exclude" : [
      ".DS_Store",
      "icons",
      "*.png",
      "**/*.coffee",
      "**/*.less",
      "**/assets/css/**",
      "**/assets/js/**"
    ],
    "recursive" : true
  },

  "package" : {
    "options" : {
      "src" : "app/",
      "dest" : "builds/latest.safariextension",
      "delete" : true
    }
  },

  "icons" : {
    "options" : {
      "src" : "app/icons/menu-icons/",
      "dest" : "builds/latest.safariextension/icons",
      "delete" : true
    }
  }
}
