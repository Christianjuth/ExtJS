{
  "options" : {
    "args" : ["--verbose"],
    "recursive" : true
  },

  "package" : {
    "options" : {
      "exclude" : [
        "**/icons/**",
        "*.png",
        "**/coffee/**",
        "**/less/**",
        "**/*.coffee",
        "**/*.less",
        "**/assets/css/**",
        "**/assets/js/**"
      ],
      "src" : "app/",
      "dest" : "builds/latest.safariextension",
      "delete" : true
    }
  },

  "icons" : {
    "options" : {
      "src" : "app/icons/menu-icons/",
      "dest" : "builds/latest.safariextension/assets/icons",
      "delete" : true
    }
  }
}
